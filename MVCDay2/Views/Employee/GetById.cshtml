@model Employee

<div class="card" style="width: 18rem;">
    <div class="card-body" style="width: 20rem; background-color: #000000eb;color: white; border-radius: 10px 55px;">
        <h5 class="card-title" style="text-align: center; font-size: 22px; font-weight: 800; margin-bottom: 2rem;">
            @Model.Name
        </h5>
        <img src="~/image/@Model.Image" style="width : 10vw; height: 10vh" asp-append-version="true"  />
        <p class="card-text">Id: @Model.Id</p>
        <p class="card-text">Age: @Model.Age</p>
        <p class="card-text">Salary: @Model.Salary</p>
        <p class="card-text">Email: @Model.Email</p>
        <p class="card-text">Phone: @Model.Phone</p>
        <p class="card-text">Phone: @Model.Company.Name</p>

        <button class="btn btn-primary" style="background-color: #6565bd;width: 100%; margin-top: 20px;">
            <a style=" color:white; text-decoration:none" asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@Model.Id">Edit</a>
        </button>

    </div>
</div>


