@model List<Employee>

<table class="table table-dark mt-3">
    <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th scope="col">Address</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Company</th>
            <th scope="col">Image</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>
                <td>@i.Name</td>
                <td>@i.Age</td>
                <td>@i.Salary</td>
                <td>@i.Address</td>
                <td>@i.Email</td>
                <td>@i.Phone</td>
                <td>@i.Company.Name</td>

                <td>
                    <img src="~/image/@i.Image" alt="personal photo" style="width : 10vw; height: 10vh" />
                </td>

                <td><button class="btn btn-primary" style="background-color: #6565bd;"><a style=" color:white; text-decoration:none" asp-controller="Employee" asp-action="GetById" asp-route-id="@i.Id">view</a></button></td>
                <td><button class="btn btn-danger" style="background-color: #ff0000;"><a style=" color:white; text-decoration:none" asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@i.Id">delete</a></button></td>
            </tr>
        }

    </tbody>
</table>
<button class="btn btn-dark" style="background-color: #000000d1;"><a style=" color:white; text-decoration:none" asp-controller="Employee" asp-action="Create">Add</a> </button>

