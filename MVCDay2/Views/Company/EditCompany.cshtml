@model Company;


<style>
    .input-box input{
        width: 100%;
        height: 45px;
        background: transparent;
        border: 1px solid white;
        border-radius: 10px;
        outline: none;
        padding: 0 20px 0 5px;
        color: #fff;
        font-size: 16px;
        margin-bottom: 5px;
        align-items: center;
        width: 310px;
        border-bottom: 2px solid #fff;
        position: relative;
    }

    .input-box input::placeholder {
        color: white;
    }

    .form-text{
        position: relative;
        width: 400px;
        height: 550px;
        border: 2px solid rgba(255, 255, 255.5);
        border-radius: 20px;
        backdrop-filter: blur(15px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

    }

    .btn {
        color: #fff;
        background-color: #795548;
        width: 100%;
        height: 50px;
        border-radius: 5px;
        outline: none;
        border: none;
        font-size: 17px;
        cursor: pointer;
        box-shadow: 3px 0 10px rgba(0,0,0,.5);
        transition: all .3s ease-in-out;
    }

</style>
@* <div class="overlay"
    style="background-color: #00000059;
    position: absolute;
    width: 100%;
    height: 100%;"></div> *@

<div class="container">
    <div class="form-box">
        <form method="post" action="/Company/SaveCompany/@Model.Id" class="form-text">
            <h2 style="color: #fff; text-align: center; font-size: 32px;">Edit Company</h2>

            <div class="input-box">
                <input type="text" name="Name" value="@Model.Name">
            </div>
            <div class="input-box">
                <input type="text" name="Type" value="@Model.Type">
            </div>

            <div class="input-box">
                <input type="text" name="Address" value="@Model.Address">
            </div>
            <div class="input-box" style="">
                <input type="text" name="DateStart" value="@Model.DateStart">
            </div>


            <div class="button">
                <input type="submit" value="Edit" class="btn" style="color: white">
            </div>
        </form>
    </div>
</div>


